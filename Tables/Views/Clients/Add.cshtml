@model Tables.Models.AddClientViewModel 

<br />
<h2>Add new client</h2>
<hr />

<a class="btn btn-primary btn-md" href="/Clients/List">To list</a>

<form method="post">
<div class="row mb-3">
    <label class="col-sm-3 col-form-label">Name</label>
    <div class="col-sm-6">
        <input type="text" name="name" class="form-control" asp-for="Name"/>
    </div>
</div>

<div class="row mb-3">
    <label class="col-sm-3 col-form-label">Email</label>
    <div class="col-sm-6">
        <input type="text" name="email" class="form-control" asp-for="Email" />
    </div>
</div>

<div class="row mb-3">
    <label class="col-sm-3 col-form-label">Phone</label>
    <div class="col-sm-6">
        <input type="text" name="phone" class="form-control" asp-for="Phone" />
    </div>
</div>

<div class="row mb-3">
    <label class="col-sm-3 col-form-label">Address</label>
    <div class="col-sm-6">
        <input type="text" name="address" class="form-control" asp-for="Address" />
    </div>
</div>

<div class="div mt-3" style="display: flex; flex-direction: row justify-content: space-between">
    <div class="offset-sm-3">
        <button type="submit" class="btn btn-success">Create</button>
    </div>

    <div class="offset-sm-3">
        <a href="/" class="btn btn-outline-primary" role="button">Cancel</a>
    </div>
</div>
</form>