@{
}
@model Tables.Models.AddCarViewModel

<br />
<h2>Add new car</h2>
<hr />

<a class="btn btn-primary btn-md" href="/Clients/List">To list</a>

<form method="post">
    <input type="hidden" name="ClientId" value="@Model.ClientId" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Brand</label>
        <div class="col-sm-6">
            <input type="text" name="brand" class="form-control" asp-for="Brand" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Color</label>
        <div class="col-sm-6">
            <input type="text" name="color" class="form-control" asp-for="Color" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Year</label>
        <div class="col-sm-6">
            <input type="text" name="year" class="form-control" asp-for="Year" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Price</label>
        <div class="col-sm-6">
            <input type="text" name="price" class="form-control" asp-for="Price" />
        </div>
    </div>

    <div class="div mt-3" style="display: flex; flex-direction: row justify-content: space-between">
        <div class="offset-sm-3">
            <button type="submit" class="btn btn-success">Create</button>
        </div>

        <div class="offset-sm-3">
            <a href="/" class="btn btn-outline-primary" role="button">Cancel</a>
        </div>
    </div>
</form>