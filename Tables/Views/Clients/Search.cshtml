@model Tables.Models.SearchClientViewModel

<br />
<h2>Search</h2>
<hr />

<a class="btn btn-primary btn-md" href="/Clients/List">To list</a>

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Id</label>
        <div class="col-sm-6">
            <input type="text" name="id" class="form-control" asp-for="Id" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" name="name" class="form-control" asp-for="Name" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="text" name="email" class="form-control" asp-for="Email" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Phone</label>
        <div class="col-sm-6">
            <input type="text" name="phone" class="form-control" asp-for="Phone" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Address</label>
        <div class="col-sm-6">
            <input type="text" name="address" class="form-control" asp-for="Address" />
        </div>
    </div>

    <div class="div mt-3" style="display: flex; flex-direction: row; justify-content: space-between">
        <div class="offset-sm-3">
            <button type="submit" class="btn btn-success">Search</button>
        </div>
    </div>
</form>

@if (Model.SearchResults.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model.SearchResults)
            {
                <tr>
                    <td>@client.Id</td>
                    <td>@client.Name</td>
                    <td>@client.Email</td>
                    <td>@client.Phone</td>
                    <td>@client.Address</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model.SearchResults.Count == 0)
{
    <p>No results found.</p>
}